@model InfoVideo.Models.Video

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Стварэнне</h3>

@using (Html.BeginForm("Create", "Videos", null, FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
                @Html.AntiForgeryToken()

