@model IEnumerable<InfoVideo.Models.Video>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>
</table>
@foreach (var item in Model)
{

    <div class="item">
        <div class="item-header">
            <img src="/Media/Images/shannar.jpg" class="item-header-img" alt="">
            <h2 class="text-background top">@item.Title</h2>
            <h3 class="text-background">
                @item.Country<br />@item.Genre
            </h3>
        </div>
        <div class="item-body">
            @item.Description
        </div>
        <div class="item-footer">
            <a href="">
                <i class="zmdi zmdi-shopping-cart-plus zmdi-hc-fw"></i>Набыць
            </a>
            <a href="@Url.Action("Details","Videos", new { id = item.Id })">
                <i class="zmdi zmdi-view-list-alt zmdi-hc-fw"></i>Падрабязна
            </a>
            <a href="@Url.Action("Edit", "Videos", new {id = item.Id})">
                <i class="zmdi zmdi-edit zmdi-hc-fw"></i>Змяніць
            </a>
            <a href="@Url.Action("Delete", "Videos", new {id = item.Id})">
                <i class="zmdi zmdi-delete zmdi-hc-fw"></i>Выдаліць
            </a>
           
        </div>
    </div>
}


