@using System.Web.Mvc.Ajax
@model InfoVideo.Models.Users

<div class="card">

    @Html.HiddenFor(model => model.Id)
    @Html.AntiForgeryToken()

  
    <h2>Карыстач</h2>


    <div class="from-form">
       @Html.LabelFor(model => model.Login):
        @Html.DisplayFor(model => model.Login)
    </div>

    <i class="zmdi zmdi-menu menu-switch"></i>

    <div class="from-form">
        @Html.LabelFor(model => model.Email):
        @Html.DisplayFor(model => model.Email)
    </div>


    <div class="from-form">
        @Html.LabelFor(model => model.FirstName):
        @Html.DisplayFor(model => model.FirstName)
    </div>

    <div class="from-form">
        @Html.LabelFor(model => model.LastName):
        @Html.DisplayFor(model => model.LastName)
    </div>

    <div class="from-form">
        @Html.LabelFor(model => model.Address):
        @Html.DisplayFor(model => model.Address)
    </div>

    <div class="from-form ">
        @Html.LabelFor(model => model.Password):
        <span class="password">@Html.DisplayFor(model => model.Password)</span>
    </div>

    <div class="from-form">
        @Html.LabelFor(model => model.Roles.Name):
        @Html.DisplayFor(model => model.Roles.Name)
    </div>

    <div class="from-form padding-last">
        @Html.LabelFor(model => model.Discount):
        @Html.DisplayFor(model => model.Discount)
    </div>


    

    <div class="menu-list card-menu" style="display: none">
        <ul>
            <a href="@Url.Action("Details", "Account", new {id = Model.Id})">
                <i class="zmdi zmdi-view-list-alt zmdi-hc-fw"></i>Падрабязнасці
            </a>
            <a href="@Url.Action("Edit", "Account", new {id = Model.Id})">
                <i class="zmdi zmdi-edit zmdi-hc-fw"></i>Змяніць
            </a>
            <a href="@Url.Action("Delete", "Account", new {id = Model.Id})">
                <i class="zmdi zmdi-delete zmdi-hc-fw"></i>Выдаліць
            </a>
        </ul>

    </div>


   


</div>
