@using InfoVideo.Models
@model IEnumerable<User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Спіс карыстачоў</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.History)
        </th>
        <th>Дзеянні</th>
    </tr>



    @foreach (var item in Model) {
    <tr>
        <td class="test" id="@(item.Id)">@Html.DisplayFor(modelItem => item.Email)</td>
        <td class="password">
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td class="dest" id="item@(item.Id)"></td>
        <td>
           
           @Html.DisplayFor(t => item.History.Count)
           
        </td>
        <td>
            <a href="@Url.Action("Edit", "Account", new {id = item.Id})" title="Змяніць">
                <i class="zmdi zmdi-edit zmdi-hc-fw"></i>
            </a>
            <a href="@Url.Action("Details", "Account", new {id = item.Id})" title="Падрабязнасці">
                <i class="zmdi zmdi-eye zmdi-hc-fw"></i>
            </a>
            <a href="@Url.Action("Delete","Account", new { id = item.Id })" title="Выдаліць">
                <i class="zmdi zmdi-delete zmdi-hc-fw"></i>
            </a>
        </td>
    </tr>
}

</table>

<div id="results"></div>