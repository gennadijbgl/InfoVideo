@model InfoVideo.Models.Format

<div class="card">

    @Html.HiddenFor(model => model.Id)
    @Html.AntiForgeryToken()

    <i style="display: none" class="fa fa-circle-o-notch fa-spin fa-3x fa-fw margin-bottom anim"></i>

    <h2>Фармат</h2>

    <div class="from-form">
        <i class="fa fa-language" aria-hidden="true"></i>
        @Html.DisplayFor(model => model.Languages)
    </div>
    <i class="zmdi zmdi-menu menu-switch"></i>
    <div class="from-form">
        <i class="zmdi zmdi-file"></i>
        @Html.DisplayFor(model => model.Container)
    </div>


    <div class="from-form padding-last">
        <i class="zmdi zmdi-3d-rotation"></i>
        @Html.DisplayNameFor(model => model.Support3D)
        @Html.DisplayFor(model => model.Support3D)
    </div>



    <div class="menu-list card-menu" style="display: none">
        <ul>
            <a href="@Url.Action("Details", "Formats", new {id = Model.Id})">
                <i class="zmdi zmdi-view-list-alt zmdi-hc-fw"></i>Падрабязнасці
            </a>
            <a href="@Url.Action("Edit", "Formats", new {id = Model.Id})">
                <i class="zmdi zmdi-edit zmdi-hc-fw"></i>Змяніць
            </a>
            <a href="@Url.Action("Delete", "Formats", new {id = Model.Id})">
                <i class="zmdi zmdi-delete zmdi-hc-fw"></i>Выдаліць
            </a>
        </ul>

    </div>



</div>






