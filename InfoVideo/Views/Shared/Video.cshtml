@model IEnumerable<InfoVideo.Models.Video>


@foreach (var item in Model)
{

    <div class="item">
        <div class="item-header">
            <img src="@Url.Content("~/Images/"+item.Logo)" class="item-header-img" alt="">
            <h2 class="text-background top">@item.Title</h2>
            <h3 class="text-background">
                @item.Genre<br />@item.Date
            </h3>
        </div>
        <div class="item-body">
            @item.Description
        </div>
        <div class="item-footer">
            <a href="">
                <i class="zmdi zmdi-shopping-cart-plus zmdi-hc-fw"></i>Набыць
            </a>
            <a href="@Url.Action("Details","Videos", new { id = item.Id })">
                <i class="zmdi zmdi-view-list-alt zmdi-hc-fw"></i>Падрабязна
            </a>
            <a href="@Url.Action("Edit", "Videos", new {id = item.Id})">
                <i class="zmdi zmdi-edit zmdi-hc-fw"></i>Змяніць
            </a>
            <a href="@Url.Action("Delete", "Videos", new {id = item.Id})">
                <i class="zmdi zmdi-delete zmdi-hc-fw"></i>Выдаліць
            </a>

        </div>
    </div>
}





