<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")


</head>

<body>

<header id="header" class="header">
    @RenderPage("Header.cshtml", false)
</header>

    @if(HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == "Index")
    {

        @RenderPage("Slider.cshtml", false)
    }

        <div class="wrapper">


            @if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == "Home")
            {
                <div class="sidebar-left">
                    @RenderPage("SidebarLeft.cshtml", false)
                </div>
            }

          
            @if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == "Home")
            {
                <div class="sidebar-right">
                    @RenderPage("SidebarRight.cshtml", false)
                </div>
            }


       
        <div id="content">
        @RenderBody()
        </div>
       



    </div>


<footer id="footer">
    @RenderPage("Footer.cshtml", false)
</footer>
    @Scripts.Render("~/bundles/Scripts")
</body>
</html>
